{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../client/dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "category": "RolePlayingGame",
    "copyright": "Simularity AI",
    "targets": [
      "nsis",
      "dmg"
    ],
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "digestAlgorithm": "sha256"
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": "Developer ID Application: Vladislav Kosarev (J6FGC4GSYA)"
    },
    "shortDescription": "",
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "productName": "Simularity AI",
  "mainBinaryName": "simularity",
  "identifier": "ai.simularity.dev",
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "migrate",
          "short": "m",
          "takesValue": true,
          "description": "Apply migration to the database at this index",
          "required": false
        }
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "simularity"
        ]
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "assetProtocol": {
        "scope": [
          "$APPLOCALDATA/screenshots/*",
          "$APPLOCALDATA/scenarios/**/*",
          "$APPLOCALDATA/simulations/**/*"
        ],
        "enable": true
      },
      "csp": "default-src 'self'; img-src 'self' https://api.simularity.ai http://asset.localhost data: asset: http://asset.localhost http://tauri.localhost tauri://localhost blob:; media-src blob:; connect-src ipc: http://ipc.localhost https://api.simularity.ai wss://api.simularity.ai https://plausible.simularity.ai https://*.sentry.io asset: http://asset.localhost http://tauri.localhost tauri://localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": false,
        "title": "Simularity",
        "width": 800,
        "minHeight": 600,
        "minWidth": 800
      }
    ]
  }
}
