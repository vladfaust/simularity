{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:5173",
    "distDir": "../client/dist"
  },
  "package": {
    "productName": "Simularity",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "ask": false,
        "confirm": true,
        "message": true,
        "open": true,
        "save": false
      },
      "fs": {
        "copyFile": false,
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": [
          "$APPLOCALDATA/**/*",
          "$APPCACHE/**/*"
        ],
        "writeFile": true,
        "exists": true
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPLOCALDATA/screenshots/*",
          "$APPLOCALDATA/scenarios/**/*",
          "$APPLOCALDATA/simulations/**/*"
        ]
      },
      "window": {
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "cli": {
      "args": [
        {
          "name": "migrate",
          "short": "m",
          "takesValue": true,
          "description": "Apply migration to the database at this index",
          "required": false
        }
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Simularity",
        "width": 800
      }
    ]
  }
}
